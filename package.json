{
  "name": "alice-bob",
  "author": "stagas",
  "short": "stagas/alice-bob",
  "description": "transport agnostic strongly typed duplex rpc interfaces",
  "version": "1.3.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://git@github.com:stagas/alice-bob.git"
  },
  "keywords": [
    "ipc",
    "rpc",
    "remote-procedure-calls",
    "message-passing",
    "duplex"
  ],
  "module": "dist/esm/index.js",
  "main": "dist/cjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "targets": {
    "main": {
      "context": "node",
      "engines": {
        "node": ">=16.0"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "docs": "documentation readme src --resolve=node --pe ts --re ts --re d.ts --github --section=API --markdown-toc-max-depth=4",
    "test": "jest",
    "cov": "jest --coverage",
    "example": "fpick example --repeat -- node -r @swc-node/register",
    "lint": "eslint src",
    "test:watch": "jest --watchAll",
    "cov:watch": "jest --coverage --watchAll",
    "docs:watch": "onchange -i src --await-write-finish 400 -- npm run docs",
    "example:watch": "fpick example --repeat -- onchange -i src example --await-write-finish 400 -- node -r @swc-node/register",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json && echo '{\"type\":\"module\"}' >dist/esm/package.json",
    "lint:fix": "npm run lint -- --fix",
    "fmt": "prettier --write src",
    "clean": "rimraf dist",
    "prepack": "npm run clean && npm run build",
    "prepack:dry": "npm pack --dry-run",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "devDependencies": {
    "@swc-node/jest": "^1.3.5",
    "@swc-node/register": "^1.3.7",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "documentation": "^13.2.5",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "fpick": "^1.1.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "onchange": "^7.1.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.4"
  }
}
